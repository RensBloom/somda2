{% extends('base.html.twig') %}

{% block content %}
    <br />
    <center>
        {{ form_start(form, { 'attr': { 'id': 'discussion_form' } }) }}
        <table class="design">
            {{ form_row(form.title) }}
            {{ form_row(form.text) }}
            {{ form_row(form.signatureOn) }}
            <tr>
                <td>&nbsp;</td>
                <td>
                    <a class="somda-button" href="#" onclick="$('#discussion_form').submit(); return false;"><span>Start nieuwe discussie</span></a>
                    <a class="somda-button" href="{{ path('forum_forum', { 'id': forum.id, 'name': (forum.name | url_encode) }) }}"><span>Terug naar de forum-categorie</span></a>
                </td>
            </tr>
        </table>
        {{ form_end(form) }}
    </center>
    <br />
{% endblock %}
