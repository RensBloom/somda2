{% extends('base.html.twig') %}

{% block content %}
    <div class="panel">
        <div class="panel-title"><i class="fas fa-comments"></i> {{ post.discussion.title }}</div>
        <div class="panel-content panel-no-background">
            {{ form_start(form, { 'attr': { 'id': 'reply_form' } }) }}
                <table>
                    {{ form_row(form.text) }}
                    {{ form_row(form.signatureOn) }}
                    {% if form.postAsModerator is defined %}{{ form_row(form.postAsModerator) }}{% endif %}
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <a class="somda-button" href="#" onclick="$('#reply_form').submit(); return false;">Reageer</a>
                            <a class="somda-button" href="{{ path('forum_discussion', { 'id': post.discussion.id, 'name': (post.discussion.title | url_encode) }) }}">Terug naar de discussie</a>
                        </td>
                    </tr>
                </table>
            {{ form_end(form) }}
        </div>
        {% for post in lastPosts %}
            <table align="center">
                {% include 'forum/post.html.twig' with { 'mayPost': false, 'userIsModerator': false, 'postIsUnread': false } %}
            </table>
        {% endfor %}
    </div>
{% endblock %}
