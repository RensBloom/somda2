{% extends('base.html.twig') %}

{% block content %}
    <div class="moduleS1" style="margin-bottom:0;"><div><h3 id="disc_title"><i class="fas fa-comments"></i> {{ post.discussion.title }}</h3></div></div>
    <center>
        {{ form_start(form, { 'attr': { 'id': 'reply_form' } }) }}
        <table class="design">
            {{ form_row(form.text) }}
            {{ form_row(form.signatureOn) }}
            <tr>
                <td>&nbsp;</td>
                <td>
                    <a class="somda-button" href="#" onclick="$('#reply_form').submit(); return false;"><span>Reageer</span></a>
                    <a class="somda-button" href="{{ path('forum_discussion', { 'id': post.discussion.id, 'name': (post.discussion.title | url_encode) }) }}"><span>Terug naar de discussie</span></a>
                </td>
            </tr>
        </table>
        {{ form_end(form) }}
    </center>
    <br />
    {% for post in lastPosts %}
        <table align="center" class="design" width="98%">
            {% include 'forum/post.html.twig' with { 'mayPost': false, 'userIsModerator': false, 'postIsUnread': false } %}
        </table>
        <br />
    {% endfor %}
{% endblock %}
