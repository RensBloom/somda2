    {{ form_start(form, { 'attr': { 'id': 'move_form' } }) }}
        <table class="design">
            {{ form_row(form.forum) }}
            <tr>
                <td>&nbsp;</td>
                <td>
                    <a class="somda-button" href="#" onclick="$('#move_form').submit(); return false;"><span>Verplaatsen</span></a>
