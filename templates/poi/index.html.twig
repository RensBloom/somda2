{% extends('base.html.twig') %}

{% block content %}
    <br />

    <div class="panel">
        <div class="panel-title">Spotpunten</div>
        <div class="panel-content">
            <table class="nowrap">
                <thead>
                    <tr>
                        <th>Provincie</th>
                        <th>Naam</th>
                        <th>Locatie</th>
                        <th>Traject</th>
                        <th>Kilometrage</th>
                        <th>GPS</th>
                        <th colspan="3">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    {% for poi in pois %}
                        <tr>
                            <td>{{ poi.category.name }}</td>
                            <td>{{ poi.name }}</td>
                            <td><span title="{{ poi.location.description }}">{{ poi.location.name }}</span></td>
                            <td>
                                <span title="{{ poi.locationSection1.description }}">{{ poi.locationSection1.name }}</span> -
                                <span title="{{ poi.locationSection2.description }}">{{ poi.locationSection2.name }}</span>
                            </td>
                            <td>{{ poi.kilometre }}</td>
                            <td>{{ poi.gps }}</td>
                            <td><a href="{{ poi.googleUrl }}" target="_blank">Google Maps</a></td>
                            <td><a href="{{ path('passing_routes_search', { 'trainTableYearId': 0, 'dayNumber': ('now' | date('N')) - 1, 'startTime': ('5 minutes ago' | date('H:i')), 'endTime': ('+30 minutes' | date('H:i')), 'locationName': poi.locationForRoutes.name }) }}">Doorkomststaat</a></td>
                            <td><a href="{{ path('pois_detail', { 'id': poi.id }) }}">Details</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
