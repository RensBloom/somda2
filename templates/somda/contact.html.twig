{% extends('base.html.twig') %}

{% block content %}
    <div class="panel">
        <div class="panel-title"><i class="fas fa-shipping-fast"></i> Feedback sturen naar de beheerder</div>
        <div class="panel-content">
            {{ form_start(form, { 'attr': { 'id': 'contact_form' } }) }}
            <table>
                {{ form_row(form.subject) }}
                {% if form.email is defined %}{{ form_row(form.email) }}{% endif %}
                {{ form_row(form.text) }}
                {{ form_row(form.captcha) }}
                <tr>
                    <td>&nbsp;</td>
                    <td>
                        <a class="somda-button" href="#" id="contact_button" onclick="disableMeAndSubmitForm('contact_button', 'contact_form'); return false;">Verstuur bericht</a>
                        <a class="somda-button" href="{{ path('home') }}">Terug naar home</a>
                    </td>
                </tr>
            </table>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
