<div class="home-spots-container">
	{% for spot in layoutData[constant('App\\Controller\\HomeController::KEY_SPOTS')] %}
		<div>{{ spot | displaySpot | raw }}</div>
		<div><a href="{{ path('spots_search', { 'maxYears': 1, 'searchParameters': '//' ~ spot.train.number ~ '/' }) }}" title="Bekijk alle spots van trein {{ spot.train.number }}"><i class="fas fa-train"></i></a></div>
		<div><a href="{{ path('spots_search', { 'maxYears': 1, 'searchParameters': spot.location.name ~ '///' }) }}" title="Bekijk alle spots te {{ spot.location.name }}"><i class="fas fa-map-marker-alt"></i></a></div>
	{% endfor %}
</div>

<br />
<div class="home-panel-buttons">
	<a class="somda-button" href="/invoer/">Spots invoeren</a>
	<a class="somda-button" href="{{ path('spots') }}">Meer spots</a>
</div>
