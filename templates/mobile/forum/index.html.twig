{% extends('mobile/base.html.twig') %}

{% block content %}
    <a class="somda-button" href="{{ path('forum_unread') }}">Alle ongelezen berichten</a>
    <br /><br />

    <table>
        {% for category in categories %}
            {% if category['forums'] | length > 0 %}
                <tr><th colspan="2">{{ category['category'].name }}</th></tr>
                {% for forum in category['forums'] %}
                    <tr>
                        <td>
                            <i class="fas fa-comments"></i>
                            <a href="{{ path('forum_forum', { 'id': forum['id'], 'name': forum['name'] }) }}">{{ forum['name'] }}</a>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        {% endfor %}
    </table>
{% endblock %}
