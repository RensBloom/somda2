{% extends 'base.html.twig' %}

{% block content %}
    <br />
    <div class="center">
        {{ form_start(form, { 'attr': { 'id': 'user_form' } }) }}
            <table>
                {{ form_row(form.email) }}
                {{ form_row(form.username) }}
                {{ form_row(form.plainPassword) }}
                <tr>
                    <td>&nbsp;</td>
                    <td><a class="somda-button" href="#" onclick="$('#user_form').submit(); return false;">Registereren bij Somda</a></td>
                </tr>
            </table>
        {{ form_end(form) }}
    </div>
    <br />
{% endblock %}
